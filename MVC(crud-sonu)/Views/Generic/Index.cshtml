@{
    <partial name=~/Views/PartialView/HeaderNavbar.cshtml />

    <table class=table>
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Age</th>
                <th>Birth Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.Modelos)
            {
                <tr>
                    <td> @item.FirstName</td>
                    <td> @item.LastName</td>
                    <td> @item.Age</td>
                    <td>
                     <a asp-action="AnimalForm" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                     <a asp-action="DeleteAnimaData" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                     <a asp-action="AddSaveForm" asp-route-id="add" class="btn btn-sm btn-danger">Add</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
